{
	"python.formatting.provider": "none",
	"python.linting.banditEnabled": false,
	"python.linting.flake8Enabled": true,
	"python.linting.enabled": true,
	"python.linting.flake8Args": [
		"--max-line-length=120",
		"--ignore=E203,E211,E999,F401,F821,W503"
	],
	"python.linting.flake8Path": "/home/lalsaado/.local/bin/flake8",
	"flake8.importStrategy": "fromEnvironment",
	"editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
	"editor.formatOnPaste": false, // required 
	"editor.formatOnType": false, // required
	"editor.formatOnSave": true, // optional 
	"editor.formatOnSaveMode": "file", // required to format on save
	"files.autoSave": "onFocusChange", // optional but recommended
	"vs-code-prettier-eslint.prettierLast": "false",
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"aws.codeWhisperer.importRecommendation": false,
	"aws.codeWhisperer.includeSuggestionsWithCodeReferences": false,
	"aws.codeWhisperer.shareCodeWhispererContentWithAWS": false // set as "true" to run 'prettier' last not first
}
